{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [ "es2020", "dom" ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@beautify-baltics-apps/fetch-openapi": [ "tools/fetch-openapi/src/index.ts" ]
    }
  },
  "exclude": [ "node_modules", "tmp" ]
}
