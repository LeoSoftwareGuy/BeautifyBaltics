{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@beautify-baltics-apps/api-client": [
        "../../packages/api-client/src/index.ts"
      ],
      "@beautify-baltics-apps/theme": [
        "../../packages/theme/src/index.ts"
      ],
      "@beautify-baltics-apps/devtools": [
        "../../packages/devtools/src/index.ts"
      ],
      "@beautify-baltics-apps/components": [
        "../../packages/components/src/index.ts"
      ]
    },
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "jsx": "react-jsx",
    "lib": [
      "dom"
    ],
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client",
      "vitest/importMeta"
    ]
  },
  "exclude": [
    "out-tsc",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "include": [
    "../../packages/theme/src/lib/mantine.d.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
